<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar club de padel</h1>

            <hr>

            <form action="/clubs/{{_id}}/editar" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="street" class="form-label">Calle</label>
                    <input type="text" class="form-control" id="street" name="street" value="{{address.street}}">
                </div>
                <div class="mb-3">
                    <label for="city" class="form-label">Ciudad</label>
                    <input type="text" class="form-control" id="city" name="city" value="{{address.city}}">
                </div>
                <div class="mb-3">
                    <label for="zip" class="form-label">Código postal</label>
                    <input type="text" class="form-control" id="zip" name="zip" value="{{address.zip}}">
                </div>
                <div class="mb-3">
                    <label for="numberOfFields" class="form-label">Pistas disponibles</label>
                    <input type="text" class="form-control" id="numberOfFields" name="numberOfFields"
                        value="{{numberOfFields}}">
                </div>
                <div class="mb-3">
                    <label for="web" class="form-label">Web</label>
                    <input type="text" class="form-control" id="web" name="web" value="{{web}}">
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Teléfono</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="{{phone}}">
                </div>

                <h6>Horario</h6>
                <div class="row align-items-center">
                    <p>Lunes - Viernes</p>
                    <div class="col">
                        <label for="weekdaysFrom" class="form-label">Desde</label>
                        <input type="time" class="form-control" id="weekdaysFrom" name="weekdaysFrom"
                            value="{{schedule.weekdays.from}}">
                    </div>
                    <div class="col">
                        <label for="weekdays.to" class="form-label">Hasta</label>
                        <input type="time" class="form-control" id="weekdays.to" name="weekdaysTo"
                            value="{{schedule.weekdays.to}}">
                    </div>
                    <p>Sábado - Domingo</p>
                    <div class="col">
                        <label for="weekendsFrom" class="form-label">Desde</label>
                        <input type="time" class="form-control" id="weekendsFrom" name="weekendsFrom"
                            value="{{schedule.weekends.from}}">
                    </div>
                    <div class="col">
                        <label for="weekendsTo" class="form-label">Hasta</label>
                        <input type="time" class="form-control" id="weekendsTo" name="weekendsTo"
                            value="{{schedule.weekends.to}}">
                    </div>
                    <p>Festivos</p>
                    <div class="col">
                        <label for="holidaysFrom" class="form-label">Desde</label>
                        <input type="time" class="form-control" id="holidaysFrom" name="holidaysFrom"
                            value="{{schedule.holidays.from}}">
                    </div>
                    <div class="col">
                        <label for="holidaysTo" class="form-label">Hasta</label>
                        <input type="time" class="form-control" id="holidaysTo" name="holidaysTo"
                            value="{{schedule.holidays.to}}">
                    </div>

                </div>



                <div class="row align-items-center">
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Imagen</label>
                        <input class="form-control" type="file" id="formFile" value="{{image}}">
                    </div>

                    <button type=" submit" class="btn btn-dark">Editar</button>
                    <a href="/clubs" class="btn btn-dark">Volver a la lista de clubs</a>
            </form>
        </div>
        <hr>
        <form action="/clubs/{{_id}}/eliminar" method="POST">
            <button class="btn btn-dark" type="submit">Eliminar club</button>
        </form>
    </div>
</div>