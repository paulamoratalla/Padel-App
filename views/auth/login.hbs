<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Inicio de sesión</h1>
            <hr>

            <form action="/iniciar-sesion" method="POST">
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Dirección de email</label>
                    <input type="email" class="form-control" id="emailInput" name="email">
                </div>

                <div class="mb-3">
                    <label for="pwdInput" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="pwdInput" name="password">
                </div>

                <div class="d-grid gap-2 mb-3 mt-3">
                    <button type="submit" class="btn btn-dark block">Acceder</button>
                </div>

                {{#if errorMessage}}
                <div class="alert alert-warning" role="alert">
                    {{errorMessage}}
                </div>
                {{/if}}

                <div class="text-center">
                    <p>¿No tienes una cuenta? <a href="/registro">Regístrate</a></p>
                </div>

            </form>
        </div>
    </div>

</div>